<?xml version="1.0" encoding="utf-8"?>
<!-- Layout handled by MainActivity.java -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity"
        android:background="@color/white">

    <ImageView
            android:layout_width="58dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/gear"
            android:id="@+id/ivPreferenceMain"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" />

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/sum"
            android:id="@+id/ivNewTaskMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp" />

    <TextView
            android:text="@string/hello_exclamation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleFormReminder"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="34sp" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/recyclerViewRemindersMain"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/ivNewTaskMain" />

    <TextView
            android:text="@string/reminders_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleFormReminder"
            app:layout_constraintStart_toStartOf="@+id/recyclerViewRemindersMain"
            android:layout_marginTop="10dp" />

    <TextView
            android:text="@string/no_reminders_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoRemindersMessageMain"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleFormReminder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerViewRemindersMain"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/green_ok" />


</androidx.constraintlayout.widget.ConstraintLayout>