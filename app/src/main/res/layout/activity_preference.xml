<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PreferenceActivity">

    <ImageView
            android:layout_width="58dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/arrow"
            android:id="@+id/ivBackPreference"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp" />

    <TextView
            android:text="@string/preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitlePreference"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackPreference"
            app:layout_constraintTop_toTopOf="@+id/ivBackPreference"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="General"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleGeneralPreference"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ivBackPreference"
            android:textColor="#7A7777"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/ivKeyboardPreference"
            app:layout_constraintEnd_toEndOf="@+id/ivKeyboardPreference" />

    <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/keyboard"
            android:id="@+id/ivKeyboardPreference"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleGeneralPreference"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" />

    <TextView
            android:text="Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLanguage"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivKeyboardPreference"
            app:layout_constraintTop_toTopOf="@+id/ivKeyboardPreference"
            app:layout_constraintStart_toEndOf="@+id/ivKeyboardPreference"
            android:layout_marginStart="10dp"
            android:textSize="20sp" />

    <ImageView
            android:layout_width="55dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/info"
            android:id="@+id/ivInfoPreference"
            app:layout_constraintTop_toBottomOf="@+id/ivKeyboardPreference"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/ivKeyboardPreference" />

    <TextView
            android:text="About app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAboutAppPreference"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivInfoPreference"
            app:layout_constraintTop_toTopOf="@+id/ivInfoPreference"
            app:layout_constraintStart_toStartOf="@+id/tvLanguage"
            android:textSize="20sp" />
</androidx.constraintlayout.widget.ConstraintLayout>